{
  "$vkg": {
    "$table": "omop.person",
    "$structuredefinition": "http://hl7.org/fhir/us/core/StructureDefinition-us-core-patient.json",
    "$baseIRI": "http://example.org/",
    "$idColumn": "person_id"
  },
  "resourceType": "Patient",
  "identifier": {
    "value": {
      "$column": "person_id"
    }
  },
  "name": {
    "family": {"$column":  "familyName"},
    "given": {"$column":  "firstName"}
  },
  "gender": {
    "$expression": "MAKE_DATE(year_of_birth, month_of_birth, day_of_birth)"
  },
  "birthDate": {
    "$expression": "CASE WHEN \"gender_source_value\" LIKE 'M' or \"gender_source_value\" LIKE 'male' THEN 'male' ELSE 'female' END"
  }
}

