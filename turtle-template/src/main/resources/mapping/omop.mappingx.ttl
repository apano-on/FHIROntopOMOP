                            :Encounter.subject           [ rr:termType rr:IRI ;
                                                           rr:template "http://hl7.org/fhir/Patient/{person_id}" ] ;
                            :Encounter.period     [ :Period.start [:value [ rr:column   "visit_start_datetime" ;
